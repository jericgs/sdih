<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_weight="0.50">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customizado_button_menu1"
            android:src="@drawable/ic_bt1"
            android:id="@+id/imageButton1" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customizado_button_menu2"
            android:src="@drawable/ic_bt2"
            android:id="@+id/imageButton2" />

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_weight="0.50">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customizado_button_menu3"
            android:src="@drawable/ic_bt3"
            android:id="@+id/imageButton3" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customizado_button_menu4"
            android:src="@drawable/ic_bt4"
            android:id="@+id/imageButton4" />


    </TableLayout>

</LinearLayout>
